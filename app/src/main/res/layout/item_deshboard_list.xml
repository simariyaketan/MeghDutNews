<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_ffffff">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/relNewsShare"
            android:orientation="vertical"
            android:padding="@dimen/dimen_20">

            <RelativeLayout
                android:id="@+id/relNewsMedia"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_15"
                android:fontFamily="@font/shruti_bold"
                android:includeFontPadding="false"
                android:maxLines="2"
                android:text="એરફોર્સનુ મિગ-29 વિમાન તુટી પડ્યુ, પાયલોટે સમય સૂચકતા વાપરીને જીવ બચાવ્યો"
                android:textColor="@color/color_EA1F25"
                android:textSize="@dimen/font_18" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_15"
                android:fontFamily="@font/shruti"
                android:includeFontPadding="false"
                android:maxLength="300"
                android:text="એરફોર્સનુ મિગ-29 વિમાન તુટી પડ્યુ, પાયલોટે સમય સૂચકતા વાપરીને જીવ બચાવ્યો ફાઈટર જેટ્સની કમીનો સામનો કરી રહેલી ભારતીય વાયુસેનાનુ વધુ એક ફાઈટર જેટ મિગ-29 પંજાબમાં ક્રેશ થયુ છે. સવારે રુટિન ટ્રેનિંગ માટે પાયલોટે મિગ 29 સાથે ઉડાન ભરી હતી.જોકે ટેકનિકલ ખામીના કારણે વિમાન હોશિયારપુર નજીક તુટી પડ્યુ હતુ.જોકે પાયલોટ સુરક્ષિત હોવાના અહેવાલો મળ્યા છે. આ વિમાન પાક બોર્ડર નજીક જ ક્રેશ થયુ છે.જ્યાં સેનાની એક્ટિવિટી એમ પણ વધારે રહેતી હોય છે."
                android:textColor="@color/color_737373"
                android:textSize="@dimen/font_16" />
        </LinearLayout>


        <RelativeLayout
            android:id="@+id/relNewsShare"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@color/color_20272727"
            android:padding="@dimen/dimen_15">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_15"
                android:layout_toLeftOf="@+id/linRight"
                android:fontFamily="@font/shruti_bold"
                android:includeFontPadding="false"
                android:text="એરફોર્સનુ મિગ-29 વિમાન તુટી પડ્યુ, પાયલોટે સમય સૂચકતા વાપરીને જીવ બચાવ્યો"
                android:textColor="@color/color_ffffff"
                android:textSize="@dimen/font_14" />

            <LinearLayout
                android:id="@+id/linRight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:orientation="horizontal">

                <View
                    android:layout_width="@dimen/dimen_05"
                    android:layout_height="@dimen/dimen_60"
                    android:layout_marginLeft="@dimen/dimen_20"
                    android:layout_marginRight="@dimen/dimen_20"
                    android:background="@color/color_EA1F25" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/share_icon" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginTop="@dimen/dimen_5"
                    android:fontFamily="@font/shruti"
                    android:includeFontPadding="false"
                    android:paddingLeft="@dimen/dimen_10"
                    android:text="@string/share"
                    android:textColor="@color/color_737373"
                    android:textSize="@dimen/font_14" />

            </LinearLayout>

        </RelativeLayout>

    </RelativeLayout>
</layout>
